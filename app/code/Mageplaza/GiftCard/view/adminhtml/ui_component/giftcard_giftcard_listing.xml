<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">giftcard_giftcard_listing.giftcard_giftcard_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>giftcard_giftcard_columns</spinner>
		<deps>
			<dep>giftcard_giftcard_listing.giftcard_giftcard_listing_data_source</dep>
		</deps>
		<buttons>
			<button name="add">
				<url path="*/*/newaction"/>
				<class>primary</class>
				<label translate="true">Add new GiftCard</label>
			</button>
		</buttons>
	</settings>
	<dataSource name="giftcard_giftcard_listing_data_source" component="Magento_Ui/js/grid/provider">
		<settings>
			<storageConfig>
				<param name="indexField" xsi:type="string">giftcard_id</param>
			</storageConfig>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>Mageplaza_GiftCard::GiftCard</aclResource>
		<dataProvider name="giftcard_giftcard_listing_data_source" class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>giftcard_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		     <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected items?</message>
                        <title translate="true">Delete items</title>
                    </confirm>
                    <url path="/giftcard/giftcard/MassDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
        </massaction>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="giftcard_giftcard_columns">
		<settings>
			<editorConfig>
				<param name="selectProvider" xsi:type="string">giftcard_giftcard_listing.giftcard_giftcard_listing.giftcard_giftcard_columns.ids</param>
				<param name="enabled" xsi:type="boolean">true</param>
				<param name="indexField" xsi:type="string">giftcard_id</param>
				<param name="clientConfig" xsi:type="array">
					<item name="saveUrl" xsi:type="url" path="mageplaza_giftcard/GiftCard/inlineEdit"/>
					<item name="validateBeforeSave" xsi:type="boolean">false</item>
				</param>
			</editorConfig>
			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">giftcard_giftcard_listing.giftcard_giftcard_listing.giftcard_giftcard_columns_editor</item>
					<item name="target" xsi:type="string">startEdit</item>
					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>
		<selectionsColumn name="ids">
			<settings>
				<indexField>giftcard_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="giftcard_id">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">ID</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="giftcard_id">
			<settings>
				<filter>text</filter>
				<label translate="true">Giftcard_id</label>
			</settings>
		</column>
		<column name="code">
			<settings>
				<filter>text</filter>
				<label translate="true">Code</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		 <column name="balance" class="Mageplaza\GiftCard\Ui\Component\Listing\Column\Balance">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Balance</label>
            </settings>
        </column>
		  <column name="amount_used" class="Mageplaza\GiftCard\Ui\Component\Listing\Column\Amount">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Amount</label>
            </settings>
        </column>
		<column name="create_from">
			<settings>
				<filter>text</filter>
				<label translate="true">Create_from</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="create_at" class="Mageplaza\GiftCard\Ui\Component\Listing\Column\Date" component="Magento_Ui/js/grid/columns/date">
			<settings>
				<filter>datetime</filter>
				<label translate="true">Create_at</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<actionsColumn name="actions" class="Mageplaza\GiftCard\Ui\Component\Listing\Column\GiftCardActions">
			<settings>
				<indexField>giftcard_id</indexField>
				<resizeEnabled>false</resizeEnabled>
				<resizeDefaultWidth>107</resizeDefaultWidth>
			</settings>
		</actionsColumn>
	</columns>
</listing>