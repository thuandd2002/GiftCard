<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">giftcard_giftcard_form.giftcard_code_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Mageplaza\GiftCard\Block\Adminhtml\GiftCard\Edit\BackButton"/>
			<button name="back" class="Mageplaza\GiftCard\Block\Adminhtml\GiftCard\Edit\DeleteButton"/>
			<button name="save" class="Mageplaza\GiftCard\Block\Adminhtml\GiftCard\Edit\SaveButton"/>
			<button name="save_and_continue" class="Mageplaza\GiftCard\Block\Adminhtml\GiftCard\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>giftcard_giftcard_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>giftcard_giftcard_form.giftcard_code_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="giftcard_code_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="giftcard_code_form_data_source" class="Mageplaza\GiftCard\Model\GiftCard\DataProvider">
			<settings>
				<requestFieldName>giftcard_id</requestFieldName>
				<primaryFieldName>giftcard_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="Balance" formElement="input" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">giftcard_code</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">balance</label>
				<dataScope>balance</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>